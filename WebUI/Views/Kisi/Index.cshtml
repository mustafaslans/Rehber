@model IEnumerable<Rehber.Entities.Entities.Kisi>

@{
    ViewBag.Title = "Index";
}
<p>
    @Html.ActionLink("Create New", "KisiEkle")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KisiAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KisiSoyadi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KisiYas)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KisiAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KisiSoyadi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KisiYas)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "KisiGuncelle", new { id=item.KisiID }) |
            @Html.ActionLink("Details", "Details", new { id=item.KisiID }) |
            @Html.ActionLink("Sil", "KisiSil", new { id=item.KisiID })
        </td>
    </tr>
}
</table>
